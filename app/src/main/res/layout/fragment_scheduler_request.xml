<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_court_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SchedulerDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextEmailRequest"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:editable="false"
            android:ems="10"
            android:hint="Email" />

        <EditText
            android:id="@+id/editTextQuadraRequest"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:editable="false"
            android:ems="10"
            android:hint="Quadra" />

        <EditText
            android:id="@+id/editTextScheduleRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Horario" />

        <Button
            android:id="@+id/buttonVoltar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltar" />

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="send"
            android:text="Contratar" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>